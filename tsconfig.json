{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "types": ["node"],
    "stripInternal": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
